<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBB00">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="873dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="40dp"
        android:paddingRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="95dp"
            android:src="@drawable/gloupiilogo"
            tools:layout_conversion_absoluteHeight="134dp"
            tools:layout_conversion_absoluteWidth="181dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="64dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_Importer"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:padding="12dp"
            android:text="Importer"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="128dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="248dp" />


        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:layout_conversion_absoluteHeight="63dp"
            tools:layout_conversion_absoluteWidth="363dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="320dp">

            <EditText
                android:id="@+id/input_outil_name"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:hint="Nom de votre outil"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="363dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="332dp" />
        </android.support.design.widget.TextInputLayout>

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="77dp"
            tools:layout_conversion_absoluteWidth="363dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="391dp">

            <EditText
                android:id="@+id/input_telephone"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Numero de telephone"
                android:inputType="textPhonetic"
                android:textColor="#F8F7F7"
                android:textSize="20dp"
                tools:layout_conversion_absoluteHeight="66dp"
                tools:layout_conversion_absoluteWidth="363dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="403dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:layout_conversion_absoluteHeight="63dp"
            tools:layout_conversion_absoluteWidth="363dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="320dp">

            <EditText
                android:id="@+id/input_outil_adresse"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:hint="Votre addresse"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="363dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="332dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:layout_conversion_absoluteHeight="63dp"
            tools:layout_conversion_absoluteWidth="363dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="320dp">

            <EditText
                android:id="@+id/input_outil_code"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:hint="Code postale"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_conversion_absoluteHeight="50dp"
                tools:layout_conversion_absoluteWidth="363dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="332dp" />
        </android.support.design.widget.TextInputLayout>







        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_Suivant"
            android:layout_width="377dp"
            android:layout_height="46dp"
            android:padding="12dp"
            android:text="Continuer"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="363dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="541dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
